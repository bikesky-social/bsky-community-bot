<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= labelerDisplayName %></title>
  <link rel="stylesheet" href="./styles.css">
</head>
<body>

<main>
  <div class="relative grid min-h-screen grid-cols-[1fr_auto_1fr] bg-gray-900 text-gray-50">
  <div class="col-start-2 my-3 flex flex-col text-sm/loose">
    <div class="ml-2.5 flex items-center rounded-2xl">
      <img src="<%= labelerAvatarUrl %>" class="h-16 rounded-lg" alt="Tailwind Play" />
      <h1 class="ml-2.5 text-2xl font-semibold"><%= labelerDisplayName %></h1>
    </div>
    <div class="my-3 rounded-lg bg-gray-800 p-3">
      <ol class="list-inside list-decimal columns-2">
        <% selfServeLabelNames.forEach(function(labelName) { %>
          <li>
            <%= labelName %>
          </li>
        <% }); %>
      </ol>
    </div>
    <% if (selfServeVerifiedLabelNames.length > 0) { %>
    <div class="rounded-lg bg-gray-800 p-3">
      <p class="text-lg/loose"><%= verifiedLabelsHeading %> âœ…</p>
      <hr class="text-gray-400 my-1"/>
      <ol start="<%= selfServeLabelNames.length+1 %>" class="list-inside list-decimal columns-2">
        <% selfServeVerifiedLabelNames.forEach(function(labelName) { %>
          <li>
            <%= labelName %>
          </li>
        <% }); %>
      </ol>
      <p class="text-right italic text-xs/loose"><%= manualVerificationNotice %></p>
    </div>
  </div>
  <% } %>
</div>
</main>

</body>
</html>